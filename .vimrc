syn on
colo evening
set number
set ts=4
set sts=4
set expandtab
set sw=4
set hls
set ignorecase
set smartcase
set incsearch
set ai
set guifont=Inconsolata\ Medium\ 12
set spell
set mouse=a
set backspace=indent,eol,nostart

highlight ExtraWhiteSpace ctermbg=red guibg=red
match ExtraWhiteSpace '\s\+$'

